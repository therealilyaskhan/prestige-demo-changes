@font-face {
  font-family: "PayPalOpen";
  src: url(https://www.paypalobjects.com/paypal-ui/fonts/PayPalOpen-Bold.woff)
    format("woff");
  font-weight: bold;
  font-style: normal;
}
@font-face {
  font-family: "PayPalOpen";
  src: url(https://www.paypalobjects.com/paypal-ui/fonts/PayPalOpen-Regular.woff2)
    format("woff");
  font-weight: normal;
  font-style: normal;
}

.z-index11 {
  z-index: 11;
}
.pp-modal-container {
  font-family: "PayPalOpen";
  height: 100vh;
  justify-content: center;
  align-items: center;
  background: rgba(108, 115, 120, 0);
  position: fixed;
  inset: 0;
  z-index: 9;
  /* before modal is opened */
  display: none;
  visibility: hidden;
  opacity: 0;
  transition: background 300ms linear, opacity .2s linear;
}
/* after modal is opened */
.pp-modal-container.opened {
  display: flex;
  background: rgba(108, 115, 120, 0.85);
  visibility: visible;
  opacity: 1;
}
.pp-modal__wrapper {
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 3px 15px 6px rgba(0, 0, 0, 0.15);
}
.pp-modal {
  background-color: #faf8f5;
  position: relative;
  flex-shrink: 0;
  display: flex;
  align-items: stretch;
  flex-direction: column;
  border-style: solid;
  height: 100vh;
  max-height: 100vh;
  width: 640px;
  z-index: 9;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
  -moz-overflow-scrolling: touch;
  transform: translateZ(0);
}
@media screen and (min-width: 700px) {
  .pp-modal {
    max-height: 90vh;
  }
}
/* pp modal scrollbar style */
.pp-modal::-webkit-scrollbar-track
{
	-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
	background-color: #F5F5F5;
}

.pp-modal::-webkit-scrollbar
{
	width: 12px;
	background-color: #F5F5F5;
}

.pp-modal::-webkit-scrollbar-thumb
{
	border-top-right-radius: 10px;
	border-bottom-right-radius: 10px;
	-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.3);
	background-color: #d4d4d4;
}
/* pp modal scrollbar style */

.pp-modal__header-icons {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #faf8f5;
  z-index: 10;
  height: auto;
  position: sticky;
  top: 0;
  width: 100%;
  flex: 0 0 60px;
}

.pp-modal__logo-wrapper {
  transform: translate(0, 2rem);
  transition: transform 0.2s ease-out;
  margin-left: 20px;
}
.pp-modal__logo-wrapper.is-scrolled {
  transform: translate(-2rem, 0);
}

@media screen and (min-width: 700px) {
  .pp-modal__logo-wrapper {
    margin-left: 56px;
  }
}

.pp-modal__logo {
  width: 45px;
}
.pp-modal__logo-pp {
  width: 100%;
  height: auto;
  display: inline-block;
}

.pp-modal-closer {
  pointer-events: all;
  background: rgba(0, 0, 0, 0);
  border: none;
  cursor: pointer;
  width: 48px;
  height: 48px;
  margin-left: auto;
  margin-right: 2px;
}
.pp-modal__close-btn {
  width: 100%;
  height: 100%;
  display: inline-block;
}

/* modal  header content styles */
.pp-modal__header-background {
  z-index: 1;
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  display: flex;
  pointer-events: none;
  top: 0;
  overflow: hidden;
  border-radius: 10px 10px 0 0;
}
.pp-modal__header-bg-gradient {
  height: 10rem;
  pointer-events: all;
  flex: 1 1 100%;
  -webkit-mask-image: linear-gradient(to bottom, black, black 60px, transparent 100px);
  mask-image: linear-gradient(to bottom, black, black 60px, transparent 100px);
  overflow: hidden;
  max-height: 55vh;
  background-color: #faf8f5;
}
.pp-modal__header-content {
  padding-top: 2rem;
  position: relative;
}
.pp-modal__header-bg-desktop,
.pp-modal__header-bg-mobile {
  position: absolute;
  right: 0;
  bottom: 36px;
}
.pp-modal__header-bg-desktop {
  display: none;
}
.pp-modal__heading {
  font-size: 28px;
  font-weight: 400;
  line-height: 36px;
  color: #001435;
  margin: 10px 0px 23.24px 52px;
}
.pp-modal__subheading {
  font-size: 18px;
  font-weight: 400;
  line-height: 24px;
  text-align: left;
  color: #001435;
  margin: 0px;
}

@media screen and (min-width: 700px) {
  .pp-modal__header-content {
    padding-bottom: 40px;
  }
  .pp-modal__header-bg-desktop {
    display: block;
  }
  .pp-modal__header-bg-mobile {
    display: none;
  }
  .pp-modal__heading {
    margin-left: 62px;
    margin-right: 20px;
  }
  .pp-modal__heading br {
    display: none;
  }
  .pp-modal__subheading {
    max-width: 380px;
    margin-left: 62px;
    margin-bottom: 60px;
  }
}

/* modal body styles */
.pp-modal__body {
  font-size: 16px;
  position: relative;
  display: flex;
  flex-direction: column;
  margin-top: -40px;
  background: #faf8f5;
  flex-grow: 1;
  z-index: 9;
  color: #515354;
  padding: 0 20px 1.5rem;
}

.pp-modal__row {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 -20px;
  background: #fff;
  padding: 1.5rem 25px;
}
.pp-modal__row.pp-modal__disclosure {
  background: none;
  flex-grow: 0;
  padding-bottom: 0;
  padding-top: 42px;
}
@media screen and (min-width: 700px) {
  .pp-modal__row {
    padding-left: 65px;
    padding-right: 65px;
  }
}
.pp-modal__disclosure {
  text-align: left;
  font-size: 14px;
  line-height: 20px;
}
.pp-modal__pay-later {
  color: #001435;
  font-size: 18px;
  margin-top: 0;
  width: 100%;
  margin-bottom: 18px;
}
.pp-modal__tile:first-of-type {
  margin-bottom: 16px;
}
.pp-modal__tile {
  border: 0;
  margin: 0;
  -webkit-appearance: button;
  width: 100%;
  height: 98px;
  padding: 12px 12px 15px 20px;
  border-radius: 12px;
  background: #fff;
  box-shadow: 0px 0px 2px rgba(0, 0, 0, 0.04), 0px 1px 12px rgba(0, 0, 0, 0.08);
  transition: box-shadow 0.15s linear;
  cursor: pointer;
}
.pp-modal__tile:hover {
  box-shadow: 0px 0px 2px rgba(0,0,0,.04),1px 4px 0px rgba(0,0,0,.08);
}
.pp-modal__tile-header {
  display: flex;
  align-items: center;
  color: #001435;
  font-size: 18px;
  font-weight: 600;
  line-height: 24px;
}
.pp-modal__tile-body {
  margin-top: 5px;
  font-size: 18px;
  font-weight: 400;
  line-height: 24px;
  display: flex;
  align-items: center;
  color: #001435;
}
