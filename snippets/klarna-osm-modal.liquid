<script>
  document.addEventListener("DOMContentLoaded", function (event) {
    let klarnaModalContainer = document.getElementById("klarna-modal-container");
    let klarnaModal = document.getElementById("klarna-modal");
  
    function openModal(e) {
      klarnaModalContainer.classList.add("SNO-427", "modal-container");
      klarnaModal.classList.remove("dont-show");
      document.querySelector('safe-sticky.product-info').classList.add('z-index11');
    }
    function closeModal(e) {
      klarnaModalContainer.classList.remove("SNO-427", "modal-container");
      klarnaModal.classList.add("dont-show");
      document.querySelector('safe-sticky.product-info').classList.remove('z-index11');
    }

    // stop event from propagation
    klarnaModal.addEventListener("click", function(e){
      e.stopPropagation();
    });

    //modal opener elements
    let klarnaModalOpener = document.getElementById("klarna-modal-opener");
    klarnaModalOpener.addEventListener("click", openModal);

    //modal closer elements
    klarnaModalContainer.addEventListener("click", closeModal);
    document.querySelectorAll(".klarna-modal-closer").forEach(function (elem) {
      elem.addEventListener("click", closeModal);
    });
  });
</script>